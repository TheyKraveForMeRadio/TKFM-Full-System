+    if (!sigRes.ok) {
+      setStatus('Signature failed: ' + (sigJson.error || sigRes.status));
+      return;
+    }
+
+    const { signature, apiKey, timestamp, cloudName } = sigJson;
+    setStatus('Uploading to Cloudinary...');
